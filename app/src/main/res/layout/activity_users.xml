<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.administrator.express_gc.UsersActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:onClick="bcus"
            android:background="@color/green"
            android:id="@+id/imageButton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignTop="@+id/textView10"
            android:src="@drawable/back" />

        <TextView
            android:paddingRight="40dp"
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:gravity="center_horizontal"
            android:text="个人中心"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/linearLayout"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/te5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="还未登录"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:id="@+id/dlbl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="10dp"
        android:background="@color/gray2"
        android:gravity="center_vertical"
        android:onClick="usdl"
        android:paddingLeft="10dp"
        android:text="登录"
        android:textSize="23sp" />

    <ImageView
        android:background="@color/gray2"
        android:src="@android:drawable/ic_media_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton1"
        android:layout_alignBottom="@+id/dlbl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/dlbl" />

    <Button
        android:onClick="usaa"
        android:id="@+id/usaa"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dlbl"
        android:layout_marginTop="40dp"
        android:background="@color/gray2"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="关于作者"
        android:textSize="23sp" />

    <ImageView
        android:background="@color/gray2"
        android:src="@android:drawable/ic_media_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/usaa"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/usaa" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usaa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="V1.0"
        android:textSize="20sp" />

    <Button
        android:onClick="tcdl"
        android:id="@+id/tcdlbt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="40dp"
        android:background="@color/gray2"
        android:paddingLeft="10dp"
        android:text="退出登录"
        android:textColor="#FF0000"
        android:textSize="23sp" />

</RelativeLayout>
