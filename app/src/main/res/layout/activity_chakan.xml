<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.express_gc.ChakanActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageButton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/green"
            android:contentDescription="@null"
            android:onClick="bcck"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textViee5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingRight="40dp"
            android:text="@string/activity_chakan_order_details"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_chakan_consignee"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/nack"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"

            android:layout_marginRight="16dp"
            android:layout_weight="5"
            android:hint="@string/activity_chakan_not_input_consignee_name"

            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textVie"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_chakan_order_courier"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/jdck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:layout_weight="5"
            android:hint="@string/activity_chakan_no_order_courier"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_chakan_phone"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ptck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"

            android:layout_marginRight="16dp"
            android:layout_weight="5"
            android:hint="@string/activity_chakan_not_input_phone"

            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_chakan_express_company"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cpck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"

            android:layout_marginRight="16dp"
            android:layout_weight="5"
            android:hint="@string/activity_chakan_not_input_courier_company"

            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_chakan_pickUP_code"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/idtck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"

            android:layout_marginRight="16dp"
            android:layout_weight="5"
            android:hint="@string/activity_chakan_not_input_pickUP_code"

            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_chakan_address"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/arck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"

            android:layout_marginRight="16dp"
            android:layout_weight="5"
            android:hint="@string/activity_chakan_not_input_address"

            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_chakan_pay"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ssck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"

            android:layout_marginRight="16dp"
            android:layout_weight="5"
            android:hint="@string/activity_chakan_not_input_pay"

            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_chakan_time"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tick"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"

            android:layout_marginRight="16dp"
            android:layout_weight="5"
            android:hint="@string/activity_chakan_not_input_time"

            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/qrck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="qrck"
        android:text="@string/activity_chakan_button_confirm_delivery"
        android:visibility="gone" />

    <Button
        android:id="@+id/qxdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="qxdd"
        android:text="@string/activity_chakan_button_cancel_order"
        android:visibility="gone" />

    <Button
        android:id="@+id/qrjdck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="qrjdck"
        android:text="@string/activity_chakan_button_take_order"
        android:visibility="gone" />

    <Button
        android:id="@+id/qrsdck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="qrsdck"
        android:text="@string/activity_chakan_button_confirm_delivery"
        android:visibility="gone" />

    <Button
        android:id="@+id/scdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="scdd"
        android:text="@string/activity_chakan_button_delete_order"
        android:visibility="gone" />

</LinearLayout>