<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.express_gc.ChakanActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/green"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageButton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/textViee5"
            android:layout_alignTop="@+id/textViee5"
            android:background="@color/green"
            android:onClick="bcck"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textViee5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingRight="40dp"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收货人:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/nack"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:hint="未输入收货人姓名"

            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textVie"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="接单者:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/jdck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:hint="未被接单"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机号:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ptck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:hint="未输入手机号"

            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="快递公司:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cpck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:hint="未输入物流公司"

            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取货号:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/idtck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:hint="未输入取货号"

            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="送达地:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/arck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:hint="未输入宿舍楼号"

            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="费用:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ssck"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:hint="未输入费用"

            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="送达时间:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tick"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:hint="未输入送达时间"

            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#cccccc"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/qrck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="qrck"
        android:text="确认收货"
        android:visibility="gone" />

    <Button
        android:id="@+id/qxdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="qxdd"
        android:text="取消订单"
        android:visibility="gone" />

    <Button
        android:id="@+id/qrjdck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="qrjdck"
        android:text="确认接单"
        android:visibility="gone" />

    <Button
        android:id="@+id/qrsdck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="qrsdck"
        android:text="确认送达"
        android:visibility="gone" />

    <Button
        android:onClick="scdd"
        android:id="@+id/scdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除订单"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>